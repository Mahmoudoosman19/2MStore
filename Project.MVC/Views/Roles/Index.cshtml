@using Project.BLL.Dtos.Authorization
@model IReadOnlyList<GetAllRoles>
@{
    ViewData["Title"] = "Roles";
}
<div class="col-md-12 p-2">

    <div class="row">
        <div class="col-12">
            <div class="card bg-dark">
                <div class="card-header text-white d-flex justify-content-between ">
                    <div>
                        <h5 class="text-white">
                            Roles List
                        </h5>
                    </div>
                    <div>
                        <a asp-action="AddRole" class="d-flex justify-content-between">
                            <img src="~/Images/plus.png" width="30" height="30" />

                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-dark table-hover">
                        <thead>
                            <tr>
                                <th>Role</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>@role.RoleName</td>
                                    <td>
                                        <a asp-route-id="@role.Id" asp-action="EditRole">
                                            <img src="~/images/edit.png" width="30" height="30" />
                                        </a>
                                    </td>
                                    <td>
                                        <a href="javascript:;" data-id="@role.Id" class="js-delete"><img src="~/images/trash.png" width="30" height="30" /></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.5.2/bootbox.min.js"></script>

        <script src="~/js/Roles.js" asp-append-version="true"></script>

}